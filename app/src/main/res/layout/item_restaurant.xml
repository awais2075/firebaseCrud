<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="8dp">

    <ImageView
            android:id="@+id/imageView_restaurantImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_restaurant"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/drawable_circle"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp"/>

    <TextView
            android:id="@+id/textView_restaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="China Town"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/imageView_restaurantImage"
            app:layout_constraintLeft_toRightOf="@id/imageView_restaurantImage"
            android:layout_marginLeft="16dp"/>

    <TextView
            android:id="@+id/textView_restaurantAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Islamabad, Pakistan"
            android:textColor="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="@id/textView_restaurantName"
            app:layout_constraintTop_toBottomOf="@id/textView_restaurantName"
    />
</androidx.constraintlayout.widget.ConstraintLayout>